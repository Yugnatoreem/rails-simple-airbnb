<div class="d-flex justify-content-between navbar mb-4">
  <div class="p-2"><h2>Airbnb</h2></div>
    <%#= simple_form_for [@flat] do |f| %>
      <%#= f.input :name %>
      <%#= f.submit "Search", class: "btn btn-primary" %>
    <%# end %>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-primary shadow bg-body-tertiary rounded mt-2 mb-2"%>
</div>

<div class="ms-4">
  <h1>All our flats</h1>
  <p>All <%= Flat.count %> flats.</p>
</div>


<div class="cards">
  <% @flats.each do |flat| %>
    <div class="card">
      <img src="https://images.unsplash.com/photo-1559767949-0faa5c7e9992?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80" alt="">
      <div class="card-info">
        <h3><%= flat.name %></h3>
        <p><%=  flat.address%></p>
        <div class="d-flex">
          <%= flat.number_of_guests %><i class="fa-solid fa-people-group"></i>
          <%= flat.price_per_night %><i class="fa-solid fa-euro-sign"></i>
        </div>
      </div>
      <div class="card-option">
        <%= link_to "More info", flat_path(flat)%>
        <%= link_to "Edit", edit_flat_path(flat)%>
        <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete }, class: "delete-btn none" %>
      </div>
    </div>
  <% end %>
</div>
